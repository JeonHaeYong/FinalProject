<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ReviewDAO">
	
	<insert id="insertReview">
		insert into review values(review_seq.nextval, #{title}, #{writer}, #{image_path1}, #{image_path2}, #{image_path3}, #{contents}, default, 0, 0, #{type})
	</insert>
	
	<select id="selectAllReview" resultType="kh.spring.dto.ReviewDTO">
		select * from review
	</select>
	
	<update id="modifyReview">
		update review set title=#{title}, contents=#{contents}
	</update>
	
	<delete id="deleteReview">
		delete from review where seq=#{value}
	</delete>
	
	<select id="getReviewCount" resultType="int">
		select count(*) from review
	</select>
	
</mapper>