<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DonationDAO">

	<insert id="insert">
		insert into donation 
		values(donation_seq.nextval, #{name}, #{title}, #{explanation}, #{image1}, #{image2}, #{image3}, #{goalmoney}, default, #{startdate}, #{enddate})
	</insert>
	
	<select id="selectDTO" resultType="kh.spring.dto.DonationDTO">
		select * from donation
	</select>
	
	<delete id="delete">
		delete from donation	
	</delete>
	
</mapper>